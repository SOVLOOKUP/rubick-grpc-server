{
  "name": "rubick_backend",
  "version": "0.1.0",
  "description": "Native Node.js modules that listen/send simulated events to devices",
  "main": "index.node",
  "scripts": {
    "build": "cargo-cp-artifact -nc index.node -- cargo build --message-format=json-render-diagnostics",
    "build-debug": "npm run build --",
    "build-release": "npm run build -- --release",
    "cargo-build": "npm run cargo-build-linux && npm run cargo-build-win && npm run cargo-build-mac ",
    "cargo-build-linux":"cargo +nightly build --release -Z build-std=std,panic_abort -Z build-std-features=panic_immediate_abort --target x86_64-unknown-linux-gnu",
    "cargo-build-win":"cargo +nightly build --release -Z build-std=std,panic_abort -Z build-std-features=panic_immediate_abort --target x86_64-pc-windows-gnu",
    "cargo-build-mac":"cargo +nightly build --release -Z build-std=std,panic_abort -Z build-std-features=panic_immediate_abort --target x86_64-apple-darwin",
    "install": "npm run build-release",
    "test": "cargo test",
    "electron-rebuild": "electron-build-env neon build rubick_backend --release"
  },
  "devDependencies": {
    "cargo-cp-artifact": "^0.1.5"
  }
}