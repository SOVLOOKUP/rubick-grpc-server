{
	"name": "rubickbase",
	"version": "0.1.12",
	"description": "Expand native capabilities for nodejs and electron based on rust",
	"type": "module",
	"author": "sovlookup <gonorth@qq.com>",
	"scripts": {
		"test": "ts-node test/index.test.ts",
		"build": "bob-esbuild tsc && pnpm prepack -r",
		"commit": "git add . && gitmoji -c",
		"release": "release-it",
		"ok": "pnpm commit && pnpm release",
		"ci:publish": "pnpm pretty:all && zx scripts/publish.js",
		"pretty:all": "prettier -w \"**/*.{ts,tsx,js,cjs,mjs}\""
	},
	"license": "MPLv2",
	"devDependencies": {
		"@types/estree": "^0.0.50",
		"@types/signale": "^1.4.2",
		"bob-esbuild": "^1.3.0",
		"bob-esbuild-cli": "^1.0.1",
		"@release-it/bumper": "^3.0.1",
		"gitmoji-changelog": "^2.2.1",
		"gitmoji-cli": "^4.6.1",
		"release-it": "^14.11.5",
		"prettier": "^2.4.0",
		"zx": "^4.2.0"
	},
	"release-it": {
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/bumper": {
				"in": "package.json",
				"out": [
					"packages/rubickbase/package.json",
					"packages/rust-backend/package.json"
				]
			}
		},
		"hooks": {
			"after:bump": "pnpx gitmoji-changelog --group-similar-commits",
			"before:git:commit": "pnpm pretty:all"
		}
	}
}
