{
	"name": "rubick_backend",
	"version": "0.8.3",
	"description": "Native Node.js modules that listen/send simulated events to devices",
	"main": "index.node",
	"homepage": "https://github.com/SOVLOOKUP/rubickbase",
	"cpu": [
		"x64"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/SOVLOOKUP/rubickbase"
	},
	"license": "MPLv2",
	"author": "sovlookup <gonorth@qq.com>",
	"scripts": {
		"build": "zx scripts/build.mjs",
		"publish-platform": "pnpm build && zx scripts/publish.mjs",
		"build-linux": "cargo build --release --target x86_64-unknown-linux-gnu",
		"build-win32": "cargo build --release --target x86_64-pc-windows-msvc",
		"build-darwin": "cargo build --release --target x86_64-apple-darwin",
		"build-linux-min": "cargo +nightly build --release -Z build-std=std,panic_abort -Z build-std-features=panic_immediate_abort --target x86_64-unknown-linux-gnu",
		"build-win32-min": "cargo +nightly build --release -Z build-std=std,panic_abort -Z build-std-features=panic_immediate_abort --target x86_64-pc-windows-msvc",
		"build-darwin-min": "cargo +nightly build --release -Z build-std=std,panic_abort -Z build-std-features=panic_immediate_abort --target x86_64-apple-darwin",
		"test": "cargo test",
		"electron-rebuild": "electron-build-env neon build rubick_backend --release"
	},
	"devDependencies": {
		"zx": "^4.2.0"
	},
	"files": [
		"index.node",
		"index.d.ts"
	]
}
